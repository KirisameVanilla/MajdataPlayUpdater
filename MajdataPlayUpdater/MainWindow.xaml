<Window x:Class="MajdataPlayUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MajdataPlay更新器" Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 发布类型选择 -->
        <ComboBox x:Name="cmbReleaseType" 
                  Grid.Row="0"
                  Grid.ColumnSpan="4"
                  Margin="0,0,0,5"
                  SelectedIndex="0"
                  >
            <ComboBoxItem>Nightly</ComboBoxItem>
            <ComboBoxItem>Stable</ComboBoxItem>
        </ComboBox>

        <!-- 按钮喵 -->
        <Button x:Name="btnCheckUpdate" 
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Content="检查更新" 
                Margin="0,5,5,5"
                Click="BtnCheckUpdate_Click"
                Padding="10,5"/>

        <Button x:Name="btnGenerateJson" 
                Grid.Row="1"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Content="生成Json" 
                Click="BtnGenerateJson_Click"
                Margin="5,5,0,5"
                Padding="10,5"/>

        <Button x:Name="btnPerformUpdate" 
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Content="开始更新" 
                Click="BtnPerformUpdate_Click"
                Margin="0,5,0,5"
                Padding="10,5"/>

        <TextBox x:Name="txtProxy" 
                 Grid.Row="3"
                 Grid.Column="0"
                 Grid.ColumnSpan="3"
                 Margin="0,5,5,5"
                 Height="25"
                 VerticalContentAlignment="Center"
                 TextChanged="TxtProxy_TextChanged"/>

        <TextBlock Text="请输入代理地址，例如 http://127.0.0.1:8888"
                   x:Name="SetProxyHint"
                   Grid.Row="3"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Center"
                   Foreground="Gray"
                   IsHitTestVisible="False"
                   Margin="5,0,0,0"/>

        <Button x:Name="btnEnsureProxy" 
                Grid.Row="3"
                Grid.Column="3"
                Content="确认" 
                Margin="5,5,0,5"
                Click="BtnEnsureProxy_Click"
                Padding="10,5"/>

        <!-- 日志 -->
        <TextBox x:Name="txtLog" 
                 Grid.Row="4"
                 Grid.ColumnSpan="4"
                 Margin="0,10"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 FontFamily="Consolas"/>

        <!-- 进度 -->
        <ProgressBar x:Name="progressBar"
                     Grid.Row="5"
                     Grid.ColumnSpan="4"
                     Height="20"
                     IsIndeterminate="False"/>
    </Grid>
</Window>